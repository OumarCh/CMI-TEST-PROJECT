<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container mx-auto">
            <div class="flex justify-between">
                <a href="{{ path('app_home')}}" class="text-2xl font-bold border-b-2 m-4 text-[#e1b12c]">CMI TEST TECHNIQUE</a>

                {% if app.user %}
                    <div>
                        {% if app.user.avatar != null %}<img src="{{app.user.avatar}}" alt="">{% endif %}
                        <a href="{{ path('app_logout')}}" class="text-l font-bold border-b-2 py-2 text-[#ee5253]">Déconnexion</a>
                    </div>
                {% else %}
                    <a href="{{ path('connect_google')}}" class="text-xl font-bold border-b-2 m-4">Se connecter</a>
                {% endif %}
            </div>

            {% block body %}{% endblock %}
        </div>
    </body>
</html>
